<!DOCTYPE html>
<html lang="en">
  {% include "head.njk" %}
  <body>
    {% include "header.njk" %}
    <div class="post-container">
      <article class="post-layout">
        <div class="post-left">
          <header class="post-header">
            <h1 class="post-title">{{ title }}</h1>
          </header>
          <div class="post-content">
            {{ content | safe }}
          </div>
        </div>
        {% if image %}
        <div class="post-right">
          <img src="{{ image }}" alt="{{ title }}" class="post-image">
        </div>
        {% endif %}
      </article>
    </div>
    {% include "footer.njk" %}
  </body>
</html>
